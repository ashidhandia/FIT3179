{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 600,
  "data": {
    "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
    "format": {"type": "topojson", "feature": "countries"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ashidhandia/FIT3179/main/Data/OBESITY_SET.csv"
        },
        "key": "id",
        "fields": ["Country", "Population", "Obesity_Percentage", "Mean_BMI"]
      }
    }
  ],
  "projection": {"type": "equalEarth"},
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "Mean_BMI",
      "type": "quantitative",
      "scale": {"domain": [0, 50], "range": ["green", "yellow", "red"]}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "Obesity_Percentage",
        "type": "quantitative",
        "title": "Obesity %"
      },
      {"field": "Mean_BMI", "type": "quantitative", "title": "Mean BMI"},
      {
        "field": "Population",
        "type": "quantitative",
        "title": "Population",
        "format": ".2s"
      }
    ]
  },
  "config": {}
}