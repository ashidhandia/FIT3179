{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "AI model sizes over time.",
  "width": 900,
  "height": 400,
  "padding": 0,
  "data": {
    "url": "https://raw.githubusercontent.com/ashidhandia/FIT3179/main/Data/ModelSize.csv"
  },
  "transform": [
    {"calculate": "toDate(datum.Year + '-01')", "as": "Date"},
    {
      "calculate": "datum['Parameters (B)'] * 1000",
      "as": "ParametersInMillions"
    }
  ],
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "labelExpr": "year(datum.value)",
        "values": [
          "2017-10-01",
          "2018-01-01",
          "2019-01-01",
          "2020-01-01",
          "2021-01-01",
          "2022-01-01",
          "2023-01-01",
          "2024-01-01"
        ],
        "grid": false
      },
      "scale": {"domain": ["2018-01-01", "2025-01-01"]}
    },
    "y": {
      "field": "Parameters (B)",
      "type": "quantitative",
      "title": "Model Size (Billions of Parameters)",
      "axis": {"format": "f", "tickCount": 5, "grid": false},
      "scale": {"type": "log", "domain": [0.01, 8000], "nice": false}
    },
    "tooltip": [
      {"field": "Model", "title": "Model"},
      {"field": "Lab", "title": "Lab"},
      {
        "field": "ParametersInMillions",
        "title": "Size (Millions)",
        "format": ",.0f"
      }
    ]
  },
  "layer": [
    {"mark": {"type": "line", "strokeWidth": 2, "color": "#1f77b4"}},
    {"mark": {"type": "point", "size": 80, "filled": true, "color": "#1f77b4"}}
  ],
  "config": {"axis": {"labelFontSize": 12, "titleFontSize": 14}}
}